% rebase('layout.tpl')

<div class="jumbotron">
    <h1>Songs</h1>
    <p class="lead">Manage your songs and artists collections.</p>
    <p><a href="\home" class="btn btn-primary btn-large">Home &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Update &amp; Search Artists</h2>
        <p>
            Open and edit the presentation of artists that exist in the Database.
        </p>
        <p><a class="btn btn-default" href="\artists">Presentation of Artists &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Search Songs</h2>
        <p>
            Search songs that exist in the Database.
        </p>
        <p><a class="btn btn-default" href="\songs">Presentation of Songs &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Insert an Artist</h2>
        <p>
            Insert a new artist in the Database.
        </p>
        <p><a class="btn btn-default" href="\insertartist">Insert Artist &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Insert a Song</h2>
        <p>
            Insert a new song in the Database.
        </p>
        <p><a class="btn btn-default" href="\insertsong">Insert Song &raquo;</a></p>
    </div>
</div>
